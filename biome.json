{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"attributePosition": "auto"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsoleLog": "warn"
			},
			"style": {
				"noUselessElse": "warn",
				"useFilenamingConvention": "error",
				"useImportType": "error"
			},
			"performance": {
				"noBarrelFile": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "error",
				"noDangerouslySetInnerHtmlWithChildren": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"lineEnding": "lf"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"trailingCommas": "none"
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignore": [
			"node_modules",
			".next",
			"out",
			"build",
			"coverage",
			"*.tsbuildinfo",
			"next-env.d.ts",
			".DS_Store",
			"*.pem",
			"npm-debug.log*",
			"yarn-debug.log*",
			"yarn-error.log*",
			".pnpm-debug.log*",
			".env*",
			".vercel"
		],
		"ignoreUnknown": true,
		"include": [
			"app/**/*.ts",
			"app/**/*.tsx",
			"components/**/*.ts",
			"components/**/*.tsx",
			"hooks/**/*.ts",
			"lib/**/*.ts",
			"*.ts",
			"*.tsx",
			"*.json"
		],
		"maxSize": 524288
	}
}
